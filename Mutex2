/*-----------------Task Mutex2--------------*/


/* FreeRTOS.org includes. */
#include "FreeRTOS.h"
#include "task.h"
#include "semphr.h"

/* Demo includes. */
#include "basic_io.h"

/* Used as a loop counter to create a very crude delay. */
#define mainDELAY_LOOP_COUNT		( 0xfffff )

/* The task functions. */
void vTask1( void *pvParameters );
void vTask2( void *pvParameters );

/*-----------------------------------------------------------*/

volatile unsigned int a;
volatile unsigned int b;
volatile unsigned int c;
volatile unsigned int d;

volatile unsigned int fail;
volatile unsigned int flag;
/*
	Must #define configUSE_MUTEXES			1
*/
void mutex_loop( void *pvParameters);
SemaphoreHandle_t xMutex = NULL; // Mutex Handle

int main( void )
{
	/*Create Mutex/semaphore before Shedular Launch*/
	xMutex=xSemaphoreCreateMutex();				// Mutex Created

	if(xMutex!=NULL)
	{
			LPC_GPIO2->DIR |=(1<<9);		 // FOR LED as output
			LPC_GPIO2->DIR |=(1<<11);

		xTaskCreate( mutex_loop, "Task 1", 240,(void *)10, 1, NULL);
		xTaskCreate( mutex_loop, "Task 2", 240,(void *)12, 1, NULL );

		/* Start the scheduler so our tasks start executing. */
		vTaskStartScheduler();

		for( ;; );
	}

	return 0;
}
/*-----------------------------------------------------------*/

void mutex_loop( void *pvParameters)
{

	 LPC_GPIO2->SET |=(1<<9);		 //led set
	 LPC_GPIO2->SET  |=(1<<11);
	for( ;; )
	{

		if(xSemaphoreTake( xMutex,100)==pdPASS)		//Mutex Token lock	to check mutex effect comment if line
		{
			d=(int)pvParameters;					//Due to Global
				c++;								/// Check c in debugging

				if(d==10)
				{
					a=1;
				 	 	// LPC_GPIO2->CLR  |=(1<<11);
						 vTaskDelay(1000);
						// LPC_GPIO2->SET  |=(1<<11);
						 a=0;
						 vTaskDelay(1000);
				}
				if(d==12)
				{
						b=1;
						//LPC_GPIO2->CLR |=(1<<9);		//led set
						vTaskDelay(1000);
						b=0;
					//	LPC_GPIO2->SET |=(1<<9);	// LED clear
						vTaskDelay(1000);
				}

						xSemaphoreGive( xMutex );		//Mutex token return
						vTaskDelay(2);					// to give chance to another task
		}

		/*
		 *LPC_GPIO2->SET  |=(1<<11);
		 *vTaskDelay(500);
		 *LPC_GPIO2->CLR  |=(1<<11);
		 * vTaskDelay(500);
		 */

	}

}

/*-----------------------------------------------------------*/

void vApplicationMallocFailedHook( void )
{
	/* This function will only be called if an API call to create a task, queue
	or semaphore fails because there is too little heap RAM remaining. */
	for( ;; );
}
/*-----------------------------------------------------------*/

void vApplicationStackOverflowHook( xTaskHandle *pxTask, signed char *pcTaskName )
{
	/* This function will only be called if a task overflows its stack.  Note
	that stack overflow checking does slow down the context switch
	implementation. */
	for( ;; );
}
/*-----------------------------------------------------------*/

void vApplicationIdleHook( void )
{
	for(;;);
	/* This example does not use the idle hook to perform any processing. */
}
/*-----------------------------------------------------------*/

void vApplicationTickHook( void )
{
	/* This example does not use the tick hook to perform any processing. */
}



